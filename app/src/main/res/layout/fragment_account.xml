<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Account">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/ic_launcher_background"
         />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="113dp"
        android:layout_height="107dp"
        android:src="@mipmap/ic_ironman"
        android:layout_marginTop="-50dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <TextView
        android:id="@+id/employerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:text="Yash Patel"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.90999997"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_selector"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="330dp" />

            <TextView
                android:id="@+id/employerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="patelymp007@gmail.com"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="349dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/header_selector"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="330dp" />

            <TextView
                android:id="@+id/employerphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123-456-7894"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="349dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/header_selector"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="330dp" />

            <TextView
                android:id="@+id/employerCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="349dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/header_selector"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designation"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="330dp" />

            <TextView
                android:id="@+id/employerDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HR"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="349dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/header_selector"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="330dp" />

            <TextView
                android:id="@+id/employerRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/5"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="349dp" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>